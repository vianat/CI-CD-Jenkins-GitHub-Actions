pipeline {
	agent any

	stages {
		stage('Unit tests - backend') {
			steps {
				dir('bugtracker-backend') {
					// Установи Go если нет в Jenkins контейнере
					sh '''
                        apt-get update && apt-get install -y golang || true
                        go test -v ./...
                    '''
				}
			}
		}
	}
}